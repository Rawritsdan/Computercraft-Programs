RedSide = "top"
-- FFFFFF = DEC:16777215
local function getPeripherals(sType)
	local t = {}
	for _,name in ipairs(peripheral.getNames()) do
		if peripheral.getType(name) == sType then
			t[#t + 1] = peripheral.wrap(name)
		end
	end
	return t
end

local function split(pString, pPattern)
	local Table = {}  -- NOTE: use {n = 0} in Lua-5.0
	local fpat = "(.-)" .. pPattern
  local last_end = 1
  local s, e, cap = pString:find(fpat, 1)
  while s do
		if s ~= 1 or cap ~= "" then
			table.insert(Table,cap)
		end
		last_end = e+1
		s, e, cap = pString:find(fpat, last_end)
	end
	if last_end <= #pString then
		cap = pString:sub(last_end)
		table.insert(Table, cap)
	end
	return Table
end

function num2hex(num)
	local hexstr = "0123456789abcdef"
	local s = ""
	while num > 0 do
		local mod = math.fmod(num, 16)
		s = string.sub(hexstr, mod+1, mod+1) .. s
		num = math.floor(num / 16)
	end
	if s == "" then
		s = "0"
	end
	return s
end
	

local t = getPeripherals("glowstone_illuminator")
rednet.open(RedSide)
term.clear()
term.setCursorPos(1,1)
print "Lights Server Started ..."
print "Awaiting Commands..."

while true do
	local ID, Message = rednet.receive()
	local Message=split(Message,'\:')
	if Message[2] == "Lights" then
		local Colour = tonumber(Message[3], 16)
		for i = 1, #t do
			t[i].setColor(Colour)
			Response = ("Lights changed to ",Colour)
			rednet.send(ID,Response)
		end
	elseif Message[2] == "demo" then
		Num = 0
		for 1, 16777215 do -- Or j = 1 and kill below for
			for i = 1, #t do
				t[i].setColor(000000)
			end
			sleep(0.20)
			for i = 1, #t do
				local Colour = tonumber(Num, 16) -- Convert to hex? hex is base 16
				t[i].setColor(Colour)
				Response = ("Lights changed to ",Colour)
				rednet.send(ID,Response)
			end
			Num = Num + 1
		end
	elseif Message[2] == "ping" then
		-- Add Ping Function
	end
end
